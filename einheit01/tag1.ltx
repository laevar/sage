%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\begin{frame}[fragile]{Kurvendiskussion I}
Betrachte die durch die reelle Zahl $a$ parametrisierte Funktionenschar:
\[ 
f: x \quad \mapsto \quad \frac{2x^2-20x+42}{x-1}+a, \quad
a \in \mathbb{R} 
\]

\begin{itemize}
\item Eingabe der Funktion
\begin{mupad}
>> f:= x -> (2*x^2-20*x +42)/(x-1)+a
\end{mupad}
\begin{mupad}
  x -> (2*x^2 - 20*x + 42)/(x - 1) + a
\end{mupad}
\item Definitionslücken
\begin{mupad}
>> Problemstellen:=discont(f(x),x)
\end{mupad}
\begin{mupad}
  {1}
\end{mupad}
\end{itemize}
\end{frame}

\begin{frame}[fragile]{Kurvendiskussion II}
\begin{itemize}
\item Pol ?
\begin{mupad}
>> limit(f(x),x=1,Left)
\end{mupad}
\begin{mupad}
  a - infinity
\end{mupad}
\begin{mupad}
>> limit(f(x), x=1, Right)
\end{mupad}
\begin{mupad}
  a + infinity
\end{mupad}
\item Umformen
\begin{mupad}
>> normal(f(x))
\end{mupad}
\begin{mupad}
     2
  2 x  - 20 x - a + a x + 42
  --------------------------
             x - 1
\end{mupad}
\end{itemize}
\end{frame}

\begin{frame}[fragile]{Kurvendiskussion III}
\begin{itemize}
\item Nullstellen
\begin{mupad}
>> Nullstellen:=solve(f(x)=0,x)
\end{mupad}
\begin{scriptsize}
\begin{mupad}
 {       2             1/2        2             1/2         }
 {     (a  - 32 a + 64)      a  (a  - 32 a + 64)      a     }
 { 5 - ------------------- - -, ------------------- - - + 5 }
 {              4            4           4            4     }
\end{mupad}
\end{scriptsize}
\item Berechnen der Ableitung
\begin{mupad}
>> f'(x)
\end{mupad}
\begin{mupad} 
                   2
     4 x - 20   2 x  - 20 x + 42
     -------- - ----------------
      x - 1                2
                    (x - 1)
\end{mupad}
\end{itemize}
\end{frame}

\begin{frame}[fragile]{Kurvendiskussion IV}
\begin{itemize}
\item Extremwerte
\begin{mupad}
